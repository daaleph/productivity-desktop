<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="home.controllers.Home" stylesheets="@/styles.css">
    <!-- Custom title bar -->
    <top>
        <HBox styleClass="title-bar">
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="minimizeButton" text="_" styleClass="title-button minimize" />
            <Button fx:id="maximizeButton" text="â–¡" styleClass="title-button maximize" />
            <Button fx:id="closeButton" text="X" styleClass="title-button close" />
            <Region prefWidth="10" />
        </HBox>
    </top>

    <!-- Main content -->
    <center>
        <VBox styleClass="main-content">
            <VBox>
                <Region prefHeight="50" />
                <HBox>
                    <Region prefWidth="50" />
                    <Region HBox.hgrow="ALWAYS" />
                    <GridPane fx:id="containerGrid" styleClass="responsive-grid">
                        <!-- Main Header -->
                        <VBox fx:id="container1" styleClass="main-container" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2">
                            <Label text="How are you feeling today" styleClass="header-label" />
                        </VBox>

                        <!-- Sub Containers -->
                        <VBox fx:id="subContainer1" styleClass="sub-container" GridPane.columnIndex="0" GridPane.rowIndex="1">
                            <Label text="Profile" styleClass="sub-header" />
                        </VBox>
                        <VBox fx:id="subContainer2" styleClass="sub-container" GridPane.columnIndex="1" GridPane.rowIndex="1">
                            <Label text="My Organizations" styleClass="sub-header" />
                        </VBox>
                        <VBox fx:id="subContainer3" styleClass="sub-container" GridPane.columnIndex="0" GridPane.rowIndex="2">
                            <Label text="Fav Projects" styleClass="sub-header" />
                        </VBox>
                        <VBox fx:id="subContainer4" styleClass="sub-container" GridPane.columnIndex="1" GridPane.rowIndex="2">
                            <Label text="My Branches" styleClass="sub-header" />
                        </VBox>
                    </GridPane>
                    <Region HBox.hgrow="ALWAYS" />
                    <Region prefWidth="50" />
                </HBox>
            </VBox>
        </VBox>
    </center>
</BorderPane>