<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="home.controllers.Home">
    <!-- Custom title bar with window control buttons -->
    <top>
        <HBox style="-fx-background-color: #f0f0f0; -fx-padding: 5;">
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="minimizeButton" text="_" prefWidth="40" prefHeight="25"
                    style="-fx-background-color: #e0e0e0;" />
            <Button fx:id="maximizeButton" text="â–¡" prefWidth="40" prefHeight="25"
                    style="-fx-background-color: #e0e0e0;" />
            <Button fx:id="closeButton" text="X" prefWidth="40" prefHeight="25"
                    style="-fx-background-color: #ff5555;" />
            <Region prefWidth="10" />
        </HBox>
    </top>
    <!-- Original content in the center -->
    <center>
        <VBox>
            <VBox>
                <Region prefHeight="50" />
                <HBox>
                    <Region prefWidth="50" />
                    <Region HBox.hgrow="ALWAYS" />
                    <GridPane fx:id="containerGrid" hgap="10" vgap="10">
                        <Label fx:id="container1" text="How are you feeling today" GridPane.columnIndex="0" GridPane.rowIndex="0"
                               GridPane.columnSpan="2" GridPane.halignment="CENTER"/>
                        <Label fx:id="subContainer1" text="Profile" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                        <Label fx:id="subContainer2" text="My Organizations" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                        <Label fx:id="subContainer3" text="Fav Projects" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                        <Label fx:id="subContainer4" text="My Branches" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                    </GridPane>
                    <Region HBox.hgrow="ALWAYS" />
                    <Region prefWidth="50" />
                </HBox>
            </VBox>
            <VBox>
                <Region prefHeight="50" />
                <HBox>
                    <Region prefWidth="50" />
                    <Region HBox.hgrow="ALWAYS" />
                    <Label text="Container 2" />
                    <Region HBox.hgrow="ALWAYS" />
                    <Region prefWidth="50" />
                </HBox>
            </VBox>
        </VBox>
    </center>
</BorderPane>